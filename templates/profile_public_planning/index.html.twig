{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
<script src="{{ asset('scripts/profil.js') }}"></script>
{% block ss2 %}{% endblock %}
{% endblock %}

{% block title %}Profil{% endblock %}

{% block body %}

<div class="intro">
    <div>
        Planning de <span class="bold">{{ user.username }}</span> !
    </div>
</div>

<div class="tab-container">
    <div class="tab-buttons">
        <a class="tab-button" href="{{ path('app_profile_public', {'id': user.id}) }}">Informations</a>
        <a class="tab-button" href="{{ path('app_profile_public_annonces', {'id': user.id}) }}">Ses Annonces</a>
        <a class="tab-button active" href="{{ path('app_profile_public_planning', {'id': user.id}) }}">Son Planning</a>
    </div>

    {% block contenu %}
        {% block ss3 %}
<link rel="stylesheet" href="{{ asset('styles/planning.css') }}">
{% endblock %}

{% block container %}

{% if user.abonnement is not null %}
    <div id="user-id" data-user-id="{{ user.id }}" style="display: none;"></div>

    <h1 id="month-year"></h1>

    <table id="calendar"></table>
    </br>
    <div class= "btns" id="btn-container">
        <button class="button_calendar" id="prev-month"><span class="material-icons">arrow_back</span></button>
        <button class="button_calendar" id="current-month"><span class="material-icons">calendar_today</span></button>
        <button class="button_calendar" id="next-month"><span class="material-icons">arrow_forward</span></button>
    </div>
    </br></br>
    <script src="{{ asset('scripts/planning_public.js') }}"></script>
{% else %}
    <div class="no_planning">
        <p>
            <span class="bold">{{ user.username }}</span> n'a pas de Planning
        </p>
        
    </div>
    
{% endif %}

{% endblock %}
    
    {% endblock %}
</div>

</body>
</html>

{% endblock %}