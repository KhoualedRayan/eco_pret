{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/messagerie.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/annonces.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/statut.css') }}">
    <script src="{{ asset('scripts/messagerie.js') }}"></script>
{% endblock %}

{% block title %}Messages{% endblock %}
{# templates/base.html.twig #}

{% block body %}
    <div class="container">
        <div class="colonne-gauche">
            {% include 'messagerie/messagesRefresh.html.twig' %}
        </div>
        <div class="colonne-droite">
            <div class="section-haut">
                <div style="display: flex; align-items: center;"><div id="statut" class="cercle"></div><h3 class="cache"></h3></div>
            </div>
            <div class="section-bas">
                <p>Sélectionnez une transaction pour voir les messages.</p>
                <!-- Messages ici dans messages.html.twig -->
            </div>
            <div class="section-actions cache" id="actions">
                {# complété par twig #}
                <div class="validDiv" id="valideBoutonDiv"></div>
                <textarea class="messInput" id="input" rows="1" maxlength="500" placeholder="Envoyer un message" oninput="ajusterTaille()" onkeypress="entree(event, '{{app.user.username}}')"></textarea>
                <span class="material-icons send" onclick="send('{{app.user.username}}')">send</span>
            </div>
        </div>
    </div>
    <dialog id="valider"></dialog>


{% endblock %}
