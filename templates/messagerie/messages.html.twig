{% for msg in messages %}
    {% if msg.expediteur == app.user %}
        <div class="message message-utilisateur">
            <span class="texte-message">{{ msg.contenu }}</span><br>
        </div>
        <span class="date  utilisateur">{{ msg.dateEnvoi|date('d/m/Y H:i') }}</span>
    {%else%}
        <div class="message">
            <span class="texte-message">{{ msg.contenu }}</span><br>
        </div>
        <span class="date">{{ msg.dateEnvoi|date('d/m/Y H:i') }}</span>
    {% endif %}
{% endfor %}